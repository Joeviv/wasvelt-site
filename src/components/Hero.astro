---
// src/components/Hero.astro
---
<section class="hero-section">
  <h2 class="hero-brand-title">Industrias Wasvelt</h2>
  <h1>Concentrados...en Ingeniería</h1>
  <p>Asesoría, diseño, fabricación, montajes y mantenimiento de maquinaria agroindustrial</p>
</section>

<style>
  .hero-section {
    text-align: center;
    padding: 4rem 2rem;
    opacity: 0;
    animation: fadeIn 1s ease-out forwards;
  }

  /* Estilos para el nuevo título y animación */
  .hero-brand-title {
    font-size: 5.1rem; /* 70% más grande que 3rem (3 * 1.7 = 5.1) */
    font-weight: 300;
    color: var(--color-text);
    margin-bottom: 1.5rem;
    
    /* Animación de revelación */
    animation: revealText 1.5s ease-out forwards;
    animation-delay: 0.5s; /* Inicia después de que el contenedor aparece */
    opacity: 0; /* Empieza invisible */
  }
  
  h1 {
    font-size: 3rem;
    font-weight: 300;
    margin-bottom: 1rem;
    color: #555; /* Un color ligeramente más suave para el subtítulo */
  }

  p {
    font-size: 1.2rem;
    color: var(--color-subtle-gray);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Animación de entrada para toda la sección */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Animación de revelación de texto */
  @keyframes revealText {
    from {
      opacity: 0;
      transform: translateY(30px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  /* FIN DE MODIFICACIÓN */

  @media (max-width: 768px) {
    /* Ajuste de tamaños para móvil */
    .hero-brand-title {
      font-size: 3.5rem;
    }
    h1 {
      font-size: 2.2rem;
    }
  }
</style>