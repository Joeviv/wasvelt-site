---
// src/components/Header.astro
// INICIO DE MODIFICACIÓN
import Logo from './Logo.astro';
// FIN DE MODIFICACIÓN
---
<header>
  <div class="logo">
    <Logo />
  </div>

  <!-- Navegación para pantallas grandes -->
  <nav class="desktop-nav">
    <a href="/la-empresa">La empresa</a>
    <a href="/comercial">Comercial</a>
    <a href="/proyectos">Proyectos</a>
    <a href="/productos">Productos</a>
    <a href="/contacto">Contacto</a>
  </nav>

  <!-- Botón para menú en pantallas pequeñas -->
  <button id="mobile-menu-button" class="mobile-nav-toggle">Menú</button>

  <!-- Navegación para pantallas pequeñas (inicialmente oculta) -->
  <nav id="mobile-menu" class="mobile-nav">
    <a href="/">Inicio</a>
    <a href="/la-empresa">La empresa</a>
    <a href="/comercial">Comercial</a>
    <a href="/proyectos">Proyectos</a>
    <a href="/productos">Productos</a>
    <a href="/contacto">Contacto</a>
  </nav>
</header>

<script>
  // Script para manejar la funcionalidad del menú móvil
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton.addEventListener('click', () => {
    // Alterna la clase 'is-active' para mostrar u ocultar el menú
    mobileMenu.classList.toggle('is-active');
  });
</script>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    border-bottom: 1px solid #eee;
  }

  /* --- Estilos para Escritorio --- */
  .desktop-nav {
    display: flex;
  }

  .desktop-nav a {
    margin-left: 1.5rem;
    /* INICIO DE MODIFICACIÓN */
    color: var(--color-text); /* Color por defecto igual al del texto */
    text-decoration: none;
    transition: color 0.2s ease;
    /* FIN DE MODIFICACIÓN */
  }
  
  /* INICIO DE MODIFICACIÓN */
  .desktop-nav a:hover {
    color: var(--color-primary); /* Color azul al pasar el mouse */
    text-decoration: none;
  }
  /* FIN DE MODIFICACIÓN */

  /* --- Estilos para Móvil --- */
  .mobile-nav-toggle,
  .mobile-nav {
    display: none;
  }

  /* --- Media Query para pantallas pequeñas --- */
  @media (max-width: 768px) {
    .desktop-nav {
      display: none;
    }

    .mobile-nav-toggle {
      display: block;
      background: none;
      border: 1px solid var(--color-text);
      padding: 0.5rem 1rem;
      cursor: pointer;
      font-family: var(--font-family-base);
    }

    .mobile-nav {
      display: none;
      position: absolute;
      top: 60px;
      left: 0;
      right: 0;
      background-color: white;
      border-bottom: 1px solid #eee;
      z-index: 100;
    }

    .mobile-nav.is-active {
      display: block;
    }

    .mobile-nav a {
      display: block;
      padding: 1rem 2rem;
      text-align: center;
      border-bottom: 1px solid #f0f0f0;
      /* INICIO DE MODIFICACIÓN */
      color: var(--color-text); /* Color por defecto en móvil */
      /* FIN DE MODIFICACIÓN */
    }
  }
</style>